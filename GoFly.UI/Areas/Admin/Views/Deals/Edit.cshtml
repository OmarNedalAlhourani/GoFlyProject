@model GoFly.BL.Models.FlightsPage.Deal

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Edit</h1>

<h4>Deal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DealId" />
            <div class="form-group">
                <label asp-for="DealName" class="control-label"></label>
                <input asp-for="DealName" class="form-control" />
                <span asp-validation-for="DealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TitelDescription" class="control-label"></label>
                <input asp-for="TitelDescription" class="form-control" />
                <span asp-validation-for="TitelDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DealDescription" class="control-label"></label>
                <input asp-for="DealDescription" class="form-control" />
                <span asp-validation-for="DealDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DealPrise" class="control-label"></label>
                <input asp-for="DealPrise" class="form-control" />
                <span asp-validation-for="DealPrise" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDleted" /> @Html.DisplayNameFor(model => model.IsDleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>


