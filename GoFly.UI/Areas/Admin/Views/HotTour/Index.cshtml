@model IEnumerable<GoFly.BL.Models.HomePage.HotTour>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-hover">


    <thead class="table table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotTourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TitelDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotTourDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotTourPrise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotTourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TitelDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotTourDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotTourPrise)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDleted)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.HotTourId" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.HotTourId" class="btn btn-primary btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.HotTourId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
