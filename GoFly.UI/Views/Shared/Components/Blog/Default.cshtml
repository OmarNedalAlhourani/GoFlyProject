@model IEnumerable<GoFly.BL.Models.HomePage.Blog>


<div id="fh5co-blog-section" class="fh5co-section-gray">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
				<h3>Recent From Blog</h3>
				<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Velit est facilis maiores, perspiciatis accusamus asperiores sint consequuntur debitis.</p>
			</div>
		</div>
	</div>

		
	
	<div class="container">
		<div class="row row-bottom-padded-md">

		
				@foreach (var item in Model)
				{
				<div class="col-lg-4 col-md-4 col-sm-6">
					<div class="fh5co-blog animate-box">

					<a href="#"><img class="img-responsive" src="~/images/@item.ImagePath" alt=""></a>
					<div class="blog-text">
						<div class="prod-title">
							<h3><a href="#">@item.Titel</a></h3>
							<span class="posted_by">@item.Date</span>
							<span class="comment"><a href="">21<i class="icon-bubble2"></i></a></span>
							<p>@item.Description</p>
							<p><a href="#">Learn More...</a></p>
						</div>
					</div>
					</div>

				</div>
				}
			</div>
				
				

		<div class="col-md-12 text-center animate-box">
			<p><a class="btn btn-primary btn-outline btn-lg" href="#">See All Post <i class="icon-arrow-right22"></i></a></p>
		</div>

	</div>
	
</div>
