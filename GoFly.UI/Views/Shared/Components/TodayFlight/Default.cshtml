@model IEnumerable<GoFly.BL.Models.FlightsPage.TodayFlight>

<div id="fh5co-tours" class="fh5co-section-gray">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
				<h3>Book A Flight</h3>
				<p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
			</div>
		</div>
		<div class="row row-bottom-padded-md">
			<div class="col-md-12 animate-box">
				<h2 class="heading-title">Todays Flight Deal</h2>
			</div>
			<div class="col-md-6 animate-box">
				@foreach (var item in Model)
				{
					
				

				<div class="row">
					<div class="col-md-12">
						<h4>@item.Titel</h4>
						<p>@item.Description</p>
					</div>
					
				</div>
			
				}
			</div>
				<div class="col-md-6 animate-box">
				<img class="img-responsive" src="~/images/cover_bg_3.png" alt="GoFly.UI">

				@foreach (var item2 in Model)
					{
						
					
			   

				<a href="#" class="flight-book">
					<div class="plane-name">
						<span class="p-flight">@item2.AirLine</span>
					</div>
					<div class="desc">
						<div class="left">
							<h4>@item2.Location</h4>
							<span>@item2.Date</span>
						</div>
						<div class="right">
							<span class="price">
								<i class="icon-arrow-down22"></i>
								$@item2.Prise
							</span>
						</div>
					</div>
				</a>
					}
			</div>
			
		</div>
	</div>
</div>

