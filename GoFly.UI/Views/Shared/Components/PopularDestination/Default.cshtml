@model IEnumerable<GoFly.BL.Models.HomePage.PopularDestination>


<div id="fh5co-destination">
	<div class="tour-fluid">
		<div class="row">
			<div class="col-md-12">
				<ul id="fh5co-destination-list" class="animate-box">

						@foreach (var item in Model)
						{


							<li class="one-forth text-center" style="background-image: url(/images/@item.ImagePath); ">
							
								<a href="#">
									<div class="case-studies-summary">
										<h2>@item.PopularDestinationName</h2>
									</div>
								</a>
							</li>

						@if (@item.ImagePath.ToString() == "place-4.png")
						{
							<li class="one-half text-center">
								<div class="title-bg">
									<div class="case-studies-summary">
										<h2>Most Popular Destinations</h2>
										<span><a href="#">View All Destinations</a></span>
									</div>

								</div>
							</li>

						}
						 }

				</ul>

			</div>
		</div>
	</div>
</div>
