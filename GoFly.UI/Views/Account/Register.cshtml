                                <label asp-for="Email">Username</label>
                                <input asp-for="Email" type="text" class="form-control" placeholder="your-email@gmail.com" id="username">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="form-group last mb-3">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Your Password" id="password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                                
                            </div>
                            
                            <div class="form-group last mb-3">
                            <label asp-for="ConfirmPassword">ConfirmPassword</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Your Password" id="password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            
                            </div>
                            
                            
                            <div class="form-group last mb-3">
                            <label asp-for="Mobile">Mobile</label>
                            <input asp-for="Mobile" type="Mobile" class="form-control" placeholder="Your Mobile" id="Mobile">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                            
                            </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" asp-action="Login" />
                            <a asp-action="Login" class="btn btn-primary">I Have Account</a>
                        </div>
                            </form>
                         </div>
