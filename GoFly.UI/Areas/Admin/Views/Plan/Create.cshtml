@model GoFly.BL.Models.HomePage.Plan

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Create</h1>

<h4>Plan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlanTitel" class="control-label"></label>
                <input asp-for="PlanTitel" class="form-control" />
                <span asp-validation-for="PlanTitel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlanDescription" class="control-label"></label>
                <input asp-for="PlanDescription" class="form-control" />
                <span asp-validation-for="PlanDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDleted" /> @Html.DisplayNameFor(model => model.IsDleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class=" btn btn-secondary">Back to List</a>

            </div>
        </form>
    </div>
</div>

